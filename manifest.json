{
  "manifest_version": 2,

  "name": "Mini url shortener",
  "description": "This extension shorts url using mini.ceol.in engine",
  "version": "1.0",

  "browser_action": {
   "default_icon": "favicon.png",
   "default_title": "Mini url"
  },
  "permissions": [
   "activeTab",
   "clipboardWrite"
  ],
  "background": {
    "scripts": ["mini.js"],
    "persistent": false
  }
}
